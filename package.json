{
  "name": "not-late-api",
  "version": "1.0.0",
  "author": "clement-avenel",
  "license": "MIT",
  "description": "A simple API to quickly find apology for being late ",
  "repository": {
    "type": "git",
    "url": "git://github.com/clement-avenel/not-late.git"
  },
  "main": "index.js",
  "scripts": {
    "client": "cd client && npm start",
    "server": "nodemon index.js",
    "dev": "concurrently --kill-others-on-fail \"npm server\" \"npm client\"",
    "dev:server": "cd client && npm build && cd .. && npm start",
    "test": "cross-env NODE_ENV=test jest --coverage --detectOpenHandles --verbose --testTimeout=10000",
    "start": "node index.js",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "./coverage",
    "reporters": [
      "default"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "path": "^0.12.7"
  },
  "engines": {
    "node": "v14.x"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "superagent": "^6.1.0",
    "supertest": "^6.1.3"
  }
}
